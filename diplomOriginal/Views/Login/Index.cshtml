@model LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Vertically centered hero sign-up form</h1>
            <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <form asp-controller="Login" asp-action="Identify" class="shadow p-4 p-md-5 border rounded-3 bg-body-tertiary">
                @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString() ?? null))
                {
                    <strong class="text-danger">@TempData["ErrorMessage"]</strong>
                    <hr />
                }
                <div class="form-floating mb-3">
                    <input required asp-for=@Model.Email type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label asp-for=@Model.Email>Электронная почта</label>
                </div>
                <div class="form-floating mb-3">
                    <input required asp-for=@Model.Password type="password" class="form-control" id="floatingPassword2" placeholder="Пароль">
                    <label asp-for=@Model.Password>Пароль</label>
                </div>
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" onclick="ShowPassword('floatingPassword2');" value="remember-me"> Показать пароль
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
                <hr class="my-4">
                <small class="text-body-secondary">Еще нет аккаунта? <a href="/register">Зарегистрироваться</a></small>
            </form>
        </div>
    </div>
</div>